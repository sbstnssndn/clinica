<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :appointment_id %>
    <%= form.text_field :appointment_id %>
  </div>

  <div class="field">
    <%= form.label :patient_id %>
    <%= form.text_field :patient_id %>
  </div>

  <% report.appointment.exam_batteries.each do |battery| %>
    <h2><%= battery.name %></h2>
    <ol>
      <% battery.exams.each do |exam| %>
        <li>
          <%= exam.name %>
          <ul>
            <% exam.indicators.each do |indicator| %>
              <li>
                <%= form.fields_for :results, indicator.results do |builder| %>
                  <%= render 'result_fields', f: builder %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ol>
  <% end %>


  <div class="field">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
