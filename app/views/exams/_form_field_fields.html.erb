<fieldset>
  <%= f.label :label %>
  <%= f.text_field :label %>

  <%= f.label :required %>
  <%= f.check_box :required %>

  <%= f.label :type %>
  <%= f.select :type, %w[TextField IntegerField] %>

  <%= f.hidden_field :exam_id, value: @exam.id %>

  <%= f.hidden_field :_destroy %>
  <%= link_to 'remove', '#', class: 'remove_fields' %>
</fieldset>