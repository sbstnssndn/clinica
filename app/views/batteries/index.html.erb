<h1>Batteries</h1>

<%= form_tag update_order_batteries_path, method: :put do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Certification</th>
        <th>Order</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @batteries.order(:order).each do |battery| %>
        <%= fields_for 'batteries[]', battery do |f| %>
          <tr>
            <td><%= battery.name %></td>
            <td><%= battery.certification %></td>
            <td>
              <%= f.number_field :order %>
            </td>
            <td><%= link_to 'Ordenar exÃ¡menes', battery %></td>
            <td><%= link_to 'Editar', edit_battery_path(battery) %></td>
            <td><%= link_to 'Eliminar', battery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag 'Reordenar' %>
<% end %>

